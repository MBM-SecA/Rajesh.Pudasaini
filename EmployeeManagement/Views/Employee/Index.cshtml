@model List<Person>
@{
    ViewData["Title"] = "Employee Record List";
}

<h1>All Employee (@Model.Count)</h1>
<table class="table table-striped">
  <thead>
    <a asp-controller="Employee" asp-action="Add"><button class="btn btn-sm btn-primary float-right">
      Add New
    </button></a>
    <tr>
      <th scope="col">ID</th>
      <th scope="col">First Name</th>
      <th scope="col">Last Name</th>
      <th scope="col">Gender</th>
      <th scope="col">Address</th>
      <th scope="col">Contact</th>
      <th scope="col">Department</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
      @{int i=1;}
      @foreach (var person in Model )
      {
        
       <tr scope="row">
          <td>
            @(i++)
          </td>
            <td>
              @{
                  string employeeFirstName = person.FirstName;
              }
              <a href="/employee/detail?id=@person.Id">@employeeFirstName</a>
              </td>
            <td>@person.LastName</td>
            <td>@person.Gender</td>
            <td>@person.Address</td>
            <td>@person.Contact</td>
            <td>@person.Department.Name</td>
            <td><a href="/Employee/Update?id=@person.Id" class="btn btn-sm btn-primary">Edit</a></td>
            <td><a href="/Employee/Delete?id=@person.Id" class="btn btn-sm btn-danger">Delete</a></td>

        </tr>   
      }
    
    
  </tbody>
</table>