@model Department 

@{
  ViewData["Title"] = "Department - " + @Model.Name;
}


<a href="/department" class="btn btn-sm btn-primary float-left flex align-items">Go Back</a>
<h1 class="ml-2">Department Detail</h1>
<hr>
<div class="card">
    <div class="card-header bg-light">
        <h4>Name: @Model.Name</h4>
    </div>
    <div class="card-body">
        <p>Description: @Model.Description</p>
        <p>Code: @Model.Code</p>
        <p>Start Date: @Model.StartDate</p>
    </div>
</div>